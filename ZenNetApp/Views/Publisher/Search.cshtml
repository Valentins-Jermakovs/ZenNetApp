@model List<ZenNetApp.Models.Publisher>

<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans">

    <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-wide">Meklēt izdevēju</h1>
        <p class="text-gray-400 mt-2">Ievadiet izdevēja nosaukumu, lai apskatītu tā informāciju un grāmatas.</p>
    </header>

    <section class="mb-6 p-5 bg-gray-800 rounded">
        <form method="post" asp-action="Search" asp-controller="Publisher">
            <input type="text" name="publisherName" placeholder="Ievadiet izdevēja nosaukumu..."
                   class="w-full p-3 bg-gray-700 border border-gray-600 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500" />

            <button class="mt-3 py-2 px-4 bg-gray-700 border border-gray-600 hover:bg-gray-600 cursor-pointer">
                Meklēt
            </button>
        </form>

        @if (ViewBag.Message != null)
        {
            <p class="text-red-400 mt-3">@ViewBag.Message</p>
        }
    </section>

    @if (Model != null && Model.Count > 0)
    {
        <section class="mt-8 w-full">
            <h2 class="text-xl font-semibold mb-4">Meklēšanas rezultāti</h2>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse border border-gray-700 text-left text-gray-100 bg-gray-800">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="p-3 border border-gray-600">Izdevējs</th>
                            <th class="p-3 border border-gray-600">Grāmatas</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var publisher in Model)
                        {
                            <tr class="hover:bg-gray-700">
                                <td class="p-3 border border-gray-600">@publisher.Name</td>
                                <td class="p-3 border border-gray-600">
                                    @if (publisher.Books != null && publisher.Books.Any())
                                    {
                                        <ul class="list-disc list-inside">
                                            @foreach (var book in publisher.Books)
                                            {
                                                <li>@book.Title (@book.Year)</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>Nav reģistrētu grāmatu</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }
    else if (Model != null)
    {
        <p class="text-gray-300 mt-6">Nekas netika atrasts.</p>
    }

    <div class="mt-6">
        <a asp-action="Index" asp-controller="Publisher" class="py-2 px-4 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Atpakaļ</a>
    </div>

</div>
