@{
    ViewData["Title"] = "Genre Detail";
}
@model ZenNetApp.Models.Genre

<!-- Galvenais konteiners -->
<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans">

    <!-- Virsraksts -->
    <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-wide">Žanri Details</h1>
        <p class="text-gray-400 mt-2">
            Šajā lapā lietotājs var detalizēti <strong>lasīt</strong> izvēlēta ieraksta saturu.
        </p>
    </header>

    <!-- Grāmatas tabula -->
    <section class="mt-8 w-full">
        <h2 class="text-xl font-semibold mb-4">Sistēmas žanri</h2>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-700 text-left text-gray-100 bg-gray-800">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="p-3 border border-gray-600">Žanra Id datu bāzē</th>
                        <th class="p-3 border border-gray-600">Nosaukums</th>
                        <th class="p-3 border border-gray-600">Grāmatas, kas pie tā attiecināmas</th>
                    </tr>
                </thead>
                <tbody>

                    <tr class="hover:bg-gray-700">
                        <td class="p-3 border border-gray-600">@Model.Id</td>
                        <td class="p-3 border border-gray-600">@Model.Name</td>
                        <td class="p-3 border border-gray-600">
                            <ul class="list-disc p-5">
                                <!-- Izvadam visas žanra grāmatas -->
                                @foreach (var book in Model.Books)
                                {
                                    <li>
                                        @book.Title
                                    </li>

                                }
                            </ul>
                        </td>
                    </tr>


                </tbody>
            </table>
        </div>
    </section>

    <div class="mt-6">
        <a asp-area="" asp-controller="Genre" asp-action="Index" class="py-2 px-4 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Atpakaļ</a>
    </div>

</div>