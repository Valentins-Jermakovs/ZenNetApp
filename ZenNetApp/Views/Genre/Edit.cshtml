@model ZenNetApp.Models.Genre

<h2 class="text-2xl font-bold mb-4">Edit Genre</h2>

<form asp-action="Edit" method="post" class="space-y-4 max-w-md">
    <input type="hidden" asp-for="Id" /> <!-- Id ir obligāts -->

    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

    <div>
        <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Save</button>
        <a asp-action="Index" class="ml-2 text-gray-700 hover:underline">Cancel</a>
    </div>
</form>