@model ZenNetApp.Models.Genre

<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans items-center justify-center">
    <h2 class="text-3xl font-semibold mb-8 text-white">Rediģēt žanru</h2>

    <form asp-action="Edit" method="post" class="w-full max-w-lg space-y-6 bg-gray-800 p-8 rounded-lg shadow-lg">
        <input type="hidden" asp-for="Id" /> <!-- Id ir obligāts -->

        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

        <div class="flex flex-col">
            <label asp-for="Name" class="mb-2 text-sm font-medium text-gray-300">Žanra nosaukums</label>
            <input asp-for="Name" class="bg-gray-700 text-white border border-gray-600 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="flex items-center space-x-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 transition">Saglabāt</button>
            <a asp-action="Index" class="text-gray-400 hover:text-gray-200 hover:underline transition">Atcelt</a>
        </div>
    </form>
</div>
