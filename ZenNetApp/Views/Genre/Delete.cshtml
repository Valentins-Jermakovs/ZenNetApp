@{
}

@model ZenNetApp.Models.Genre

<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans items-center justify-center">
    <h2 class="text-3xl font-semibold mb-8 text-white">Dzēst žanru</h2>

    <p class="mb-6 text-gray-300 text-lg">
        Pārliecināti, kā gribat dzēst žanru <strong>@Model.Name</strong> no datu bāzes?
    </p>

    <form asp-action="Delete" method="post" class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4">
        <input type="hidden" asp-for="Id" /> <!-- Slēptais id -->
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-3 rounded focus:outline-none focus:ring-2 focus:ring-red-400 transition">Jā, dzēst</button>
        <a asp-action="Index" class="text-gray-400 hover:text-gray-200 hover:underline transition font-medium">Atcelt</a>
    </form>
</div>
