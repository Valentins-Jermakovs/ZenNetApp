@{
    ViewData["Title"] = "Author Index";
}

@model IEnumerable<ZenNetApp.Models.Author>

<!-- Galvenais konteiners -->
<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans">

    <!-- Virsraksts -->
    <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-wide">Autoru CRUD</h1>
        <p class="text-gray-400 mt-2">
            Šajā lapā lietotājs var <strong>lasīt</strong>, <strong>rakstīt</strong>, <strong>modificēt</strong> un <strong>dzēst</strong> tabulas saturu.
        </p>
    </header>

    <!-- Informācijas bloks -->
    <section class="mb-8 p-5 bg-gray-800">
        <h2 class="text-xl font-semibold mb-2">Lietotāj!</h2>
        <p class="text-gray-300">
            Šajā lapā tu vari veikt CRUD operācijas ar autoriem. Izmanto pieejamos rīkus, lai pārvaldītu grāmatu sarakstu pēc savām vajadzībām.
        </p>
    </section>

    <!-- Kļūdu ziņojumi -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 p-4 bg-red-600 text-white rounded">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Autoru tabula -->
    <section class="mt-8 w-full">
        <h2 class="text-xl font-semibold mb-4">Sistēmas grāmatas</h2>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-700 text-left text-gray-100 bg-gray-800">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="p-3 border border-gray-600">Vārds</th>
                        <th class="p-3 border border-gray-600">Valsts</th>
                        <th class="p-3 border border-gray-600">Pieejamas operācijas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr class="hover:bg-gray-700">
                            <td class="p-3 border border-gray-600">@author.Name</td>
                            <td class="p-3 border border-gray-600">@author.Country</td>
                            <!-- Poga uz datu update -->
                            <td class="p-3 border border-gray-600">
                                <!-- Rediģēt -->
                                <a asp-action="Edit" asp-route-id="@author.Id" class="py-1 px-2 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Rediģēt</a>
                                <!-- Dzēst -->
                                <a asp-action="Delete" asp-route-id="@author.Id" class="py-1 px-2 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Dzēst</a>
                                <!-- Links uz details -->
                                <a asp-action="Details" asp-route-id="@author.Id" class="py-1 px-2 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Skatīt vairāk</a>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
    <!-- Links uz Create formu -->
    <div class="mt-6">
        <a asp-action="Create" class="py-2 px-4 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Pievienot jaunu autoru</a>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="py-2 px-4 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Atpakaļ</a>
    </div>
</div>
