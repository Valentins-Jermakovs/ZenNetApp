@{
    ViewData["Title"] = "Author Detail";
}
@model ZenNetApp.Models.Author

<!-- Galvenais konteiners -->
<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans">

    <!-- Virsraksts -->
    <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-wide">Grāmatas Details</h1>
        <p class="text-gray-400 mt-2">
            Šajā lapā lietotājs var detalizēti <strong>lasīt</strong> izvēlēta ieraksta saturu.
        </p>
    </header>

    <!-- Grāmatas tabula -->
    <section class="mt-8 w-full">
        <h2 class="text-xl font-semibold mb-4">Sistēmas grāmatas</h2>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-700 text-left text-gray-100 bg-gray-800">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="p-3 border border-gray-600">Autora Id datu bāzē</th>
                        <th class="p-3 border border-gray-600">Vārds, uzvārds</th>
                        <th class="p-3 border border-gray-600">Valsts</th>
                        <th class="p-3 border border-gray-600">Sarakstītas grāmatas</th>
                    </tr>
                </thead>
                <tbody>

                    <tr class="hover:bg-gray-700">
                        <td class="p-3 border border-gray-600">@Model.Id</td>
                        <td class="p-3 border border-gray-600">@Model.Name</td>
                        <td class="p-3 border border-gray-600">@Model.Country</td>
                        <td class="p-3 border border-gray-600">
                            <ul>
                            <!-- Izvadam visas autora grāmatas -->
                            @foreach (var book in Model.Books)
                            {
                                <li>
                                    @book.Title
                                </li>
                                
                            }
                            </ul>
                        </td>
                    </tr>


                </tbody>
            </table>
        </div>
    </section>


</div>