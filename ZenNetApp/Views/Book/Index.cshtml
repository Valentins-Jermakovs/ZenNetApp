@{
    ViewData["Title"] = "Book Index";
}

@model IEnumerable<ZenNetApp.Models.Book>

<!-- Galvenais konteiners -->
<div class="w-full flex flex-col p-8 bg-gray-900 text-gray-100 min-h-screen font-sans">

    <!-- Virsraksts -->
    <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-wide">Grāmatu CRUD</h1>
        <p class="text-gray-400 mt-2">
            Šajā lapā lietotājs var <strong>lasīt</strong>, <strong>rakstīt</strong>, <strong>modificēt</strong> un <strong>dzēst</strong> tabulas saturu.
        </p>
    </header>

    <!-- Informācijas bloks -->
    <section class="mb-8 p-5 bg-gray-800">
        <h2 class="text-xl font-semibold mb-2">Lietotāj!</h2>
        <p class="text-gray-300">
            Šajā lapā tu vari veikt CRUD operācijas ar grāmatām. Izmanto pieejamos rīkus, lai pārvaldītu grāmatu sarakstu pēc savām vajadzībām.
        </p>
    </section>

    <!-- Grāmatu tabula -->
    <section class="mt-8 w-full">
        <h2 class="text-xl font-semibold mb-4">Sistēmas grāmatas</h2>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-700 text-left text-gray-100 bg-gray-800">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="p-3 border border-gray-600">Nosaukums</th>
                        <th class="p-3 border border-gray-600">Gads</th>
                        <th class="p-3 border border-gray-600">Autors</th>
                        <th class="p-3 border border-gray-600">Žanrs</th>
                        <th class="p-3 border border-gray-600">Lasītājs</th>
                        <th class="p-3 border border-gray-600">Izdevējs</th>
                        <th class="p-3 border border-gray-600">Pieejamas operācijas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr class="hover:bg-gray-700">
                            <td class="p-3 border border-gray-600">@book.Title</td>
                            <td class="p-3 border border-gray-600">@book.Year</td>
                            <td class="p-3 border border-gray-600">@book.Author?.Name</td>
                            <td class="p-3 border border-gray-600">@book.Genre?.Name</td>
                            <td class="p-3 border border-gray-600">@book.BorrowedBy?.Name</td>
                            <td class="p-3 border border-gray-600">@book.Publisher?.Name</td>
                            <!-- Poga uz datu update -->
                            <td class="p-3 border border-gray-600">
                                <!-- Rediģēt -->
                                <a asp-action="Edit" asp-route-id="@book.Id" class="py-1 px-2 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Rediģēt</a>
                                <!-- Dzēst -->
                                <a asp-action="Delete" asp-route-id="@book.Id" class="py-1 px-2 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Dzēst</a>
                                <a class="py-1 px-2 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer" asp-area="" asp-route-id="@book.Id" asp-controller="Book" asp-action="Details">Skatīt vairāk</a>
                            </td>
                        </tr>
                        
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Create tabula -->
    <!-- Links uz Create formu -->
    <div class="mt-6">
        <a asp-action="Create" class="py-2 px-4 bg-gray-800 border border-gray-700 hover:bg-gray-600 cursor-pointer">Pievienot jaunu grāmatu</a>
    </div>

</div>